<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/imgZar"
        android:layout_width="@dimen/imgBoyut"
        android:layout_height="@dimen/imgBoyut"
        android:layout_marginTop="@dimen/imgMarginTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_zar" />

    <Button
        android:id="@+id/btnZarAt"
        android:layout_width="@dimen/imgBoyut"
        android:layout_height="wrap_content"
        android:text="@string/zarAt"
        android:textStyle="bold"
        android:textSize="@dimen/btnSize"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/imgZar" />



</androidx.constraintlayout.widget.ConstraintLayout>